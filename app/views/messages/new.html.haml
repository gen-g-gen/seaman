.wrapper
  .left
    #nav-content 
      =link_to root_path do
        %img.no1{src: "/assets/logo.png"}
  .new
    = form_with model: @message, local: true, url: area_point_messages_path  do |f|
      .new__top
        .new__top__right
        .new__top__left
          .new__top__left__text
            コメント
            = f.text_field :message
          .new__top__left__image
            = f.file_field :image
      .new__middle
        .new__middle__wave
          波（悪いーー良い）
          #star1
            - f.label :wave
            = f.hidden_field :wave, :value => @message.wave
        .new__middle__windy
          風（無風ーー強い）
          #star2
            - f.label :windy
            = f.hidden_field :windy, value: @message.windy
        .new__middle__population
          人数（30人--100人）
          #star3
            - f.label :population
            = f.hidden_field :population, :value => @message.population
        .new__middle__set
          セット間隔（長い--早い)
          #star4
            - f.label :set
            = f.hidden_field :set, :value => @message.set
        .new__middle__expected
          期待値（低い--高い）
          #star5
            - f.label :expected
            = f.hidden_field :expected, :value => @message.expected
      .new__submit
        = f.submit
  
