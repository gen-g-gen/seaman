.left
  %input#nav-input.nav-unshown{:type => "checkbox"}/
  %label#nav-open{:for => "nav-input"}
    %span
  %label#nav-close.nav-unshown{:for => "nav-input"}

  #nav-content 
    - if user_signed_in?
      = link_to area_point_messages_path(current_user.area_id, current_user.homepoint_id) do
        %img.no1{src: "/assets/logo.png"}
    -else
      =link_to root_path do
        %img.no1{src: "/assets/logo.png"}
    %ul.nav-name
      %li.level0
        = link_to root_path do
          = icon('fas', 'map-marker-alt')
          #none ポイント
        %ul.level1
          - @prefectures.each do |pref|
            %li.level2
              = pref.name
              %ul.level3
                - @areas.each do |area|
                  -if pref.id == area.prefecture_id
                    %li.level4
                      = link_to new_area_point_path(area.id) do
                        = area.name
                      %ul.level5
                        - @points.each do |point|
                          -if area.id== point.area_id
                            %li.level6
                              = link_to area_point_messages_path(area.id, point.id) do
                                = point.name
      - if user_signed_in?
        %li.level0
          = link_to area_point_messages_path(current_user.area_id, current_user.homepoint_id) do
            = icon('fas', 'home')
            #none HOME
        %li.level0
          = link_to new_wafe_path do
            = icon('fab', 'osi')
            #none 波予測
        %li.level0
          = link_to do
            = icon('fas', 'search', class: "right__top__right__icon")
            #none TOP検索
        %li.level0  
          = link_to destroy_user_session_path, method: :delete do
            = icon('far', 'user')
            #none ログアウト
      - else
        %li.level0
          = link_to new_user_path do
            = icon('far', 'user')
            #none ログイン
      